{
  "name": "kod/bootstrap-slim",
  "description": "Library for bootstrapping a Slim 3 based application.",
  "version": "1.0.0",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "php",
    "Slim 3",
    "bootstrap"
  ],
  "authors": [
    {
      "name": "Konstantin Deryabin",
      "email": "kderyabin@orange.fr",
      "role": "Developer"
    }
  ],
  "config": {
    "bin-dir": "bin",
    "vendor-dir": "vendor"
  },
  "autoload": {
    "psr-4": {
      "Kod\\BootstrapSlim\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Kod\\BootstrapSlim\\Tests\\": "tests/src",
      "Kod\\BootstrapSlim\\Sample\\": "samples"
    }
  },
  "require": {
    "psr/container": "^1.0",
    "psr/http-message": "^1.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "~3.3.0",
    "phpunit/phpunit": "^7.4",
    "slim/slim": "^3.9"
  },
  "scripts": {
    "test": [
      "@cs",
      "@tu"
    ],
    "cs": [
      "env ./bin/phpcs --colors --standard=PSR2  ./src ./samples"
    ],
    "cs-fix": [
      "env ./bin/phpcbf --standard=PSR2 --ignore=src/lib/vendor/ ./src ./samples"
    ],
    "tu": [
      "env ./bin/phpunit --testdox  -v -c tests/phpunit.xml"
    ],
    "tu-cover": [
      "env ./bin/phpunit --testdox -v -c tests/phpunit-cover.xml"
    ]
  }
}
